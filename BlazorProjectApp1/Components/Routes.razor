<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)" />  @* Changing to AuthorizeRouteView closes security loop hole where someone can bypass authentication by manually typing in URL. *@
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>
